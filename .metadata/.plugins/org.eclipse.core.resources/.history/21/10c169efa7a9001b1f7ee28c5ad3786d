package com.hugs.resources;

import java.time.LocalDate;

import javax.validation.constraints.Email;
import javax.validation.constraints.Past;
import javax.validation.constraints.Size;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.hugs.dto.ClienteDTO;
import com.hugs.entities.Cliente;
import com.hugs.entities.Endereco;
import com.hugs.services.ClienteService;

@RestController
@RequestMapping(value = "clients")
public class ClienteResource {

	@Autowired
	ClienteService clienteService;
	
	@GetMapping(value = "/params")
	public ResponseEntity<String> getParamsInsertCliente(){
		StringBuilder sb = new StringBuilder();
		
		sb.append("cpfCnpj");
		sb.append("nomeRazaoSocial");
		sb.append("tipoPessoa");
		sb.append("dataNascimentoConstituicao");
		sb.append("email");
		sb.append("endereco_1");
		sb.append("endereco_2");
		sb.append("endereco_3");
		sb.append("whatsApp");
		sb.append("telefone_1");
		sb.append("telefone_2");
		sb.append("telefone_3");
		sb.append("permiteMktWhatsapp");
		sb.append("permiteMktSms");
		sb.append("permiteMktEmail");
	}
	
	@PostMapping()
	public ResponseEntity<Cliente> insertCliente(@RequestBody ClienteDTO dto){
		
		Cliente cliente = clienteService.createClient(dto);
		
		return ResponseEntity.ok().body(cliente);
	}
}
