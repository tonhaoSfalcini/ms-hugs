package com.hugs.repositories;

import java.time.LocalDate;

import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.JoinColumn;
import javax.persistence.ManyToOne;

import lombok.Getter;
import lombok.Setter;

@Entity(name = "tb_cliente")
public class Cliente {

	@Getter
	@Id @GeneratedValue(strategy = GenerationType.IDENTITY)
	private Long id;
	
	@Getter @Setter
	private String cpfCnpj;
	
	@Getter @Setter
	private String nomeRazaoSocial;

	@Getter @Setter
	private String tipoPessoa;
	
	@Getter @Setter
	private LocalDate dataNascimentoConstituicao;
	
	@Getter @Setter
	private String email;
	
	@Getter @Setter
	@ManyToOne
	@JoinColumn(name = "endereco_1_id", nullable = false)
	private Endereco endereco_1;
	
	@Getter @Setter
	@ManyToOne
	@JoinColumn(name = "endereco_2_id", nullable = false)
	private Endereco endereco_2;
	
	@Getter @Setter
	@ManyToOne
	@JoinColumn(name = "endereco_3_id", nullable = false)
	private Endereco endereco_3;
	
	@Getter @Setter
	private String whatsApp;
	
	@Getter @Setter
	private String telefone_1;
	
	@Getter @Setter
	private String telefone_2;
	
	@Getter @Setter
	private String telefone_3;
	
	@Getter @Setter
	private Boolean permiteMktWhatsapp;
	
	@Getter @Setter
	private Boolean permiteMktSms;
	
	@Getter @Setter
	private Boolean permiteMktEmail;
}
